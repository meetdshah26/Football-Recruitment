<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
  <%- include('_layouts/head') %>
  <title>Add Vacancy | <%= title %></title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/css/dropify.min.css">
  <link rel="stylesheet" href="/app-assets/vendors/select2/select2-materialize.css" type="text/css">
</head>
<!-- END: Head-->

<body class="vertical-layout page-header-light vertical-menu-collapsible vertical-dark-menu preload-transitions 2-columns" data-open="click" data-menu="vertical-dark-menu" data-col="2-columns">
  <%- include('_layouts/sidenavbar') %>

  <!-- BEGIN: Page Main-->
  <div id="main">
    <div class="row">
      <div id="breadcrumbs-wrapper" data-image="/app-assets/images/gallery/breadcrumb-bg.jpg">
        <div class="container">
          <div class="row">
            <div class="col s12 m6 l6">
              <h5 class="breadcrumbs-title mt-0 mb-0"><a class="mr-2" href="/job"><i class="material-icons">arrow_back</i></a><span>Add Vacancy</span></h5>
            </div>
            <div class="col s12 m6 l6 right-align-md">
              <ol class="breadcrumbs mb-0">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/job">Vacancies</a></li>
                <li class="breadcrumb-item active">Add Vacancy</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="">
        <div class="container">
          <div class="section">
            <div class="row">
              <div class="col s12">
                <%- messages('messages', locals) %>
              </div>
            </div>
            <form method="POST" onsubmit="validate()" action="/job/add" id="form">
              <div class="col s12">
                <div class="card">
                  <div class="card-content">
                    <div class="row">

                      <div class="input-field col m6 s12">
                        <select id="recruiter" name="recruiter">
                          <option value="" disabled selected>Select Recruiter Name</option>
                          <% recruiters.forEach(c => { %>
                          <option value="<%= c._id %>"><%= c.recruiterName %></option>
                          <% }); %>
                        </select>
                        <label>Select Recruiter name</label>
                        <small>
                          <div id="errorRecruiter" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12">
                        <input placeholder="Title" id="title" name="title" type="text">
                        <label for="title">Title</label>
                        <small>
                          <div id="errorTitle" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <input placeholder="1000" id="salary" name="salary" type="text">
                        <label for="salary">Salary</label>
                        <small>
                          <div id="errorSalary" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <input placeholder="5 Years" id="experience" name="experience" type="text">
                        <label for="experience">Experience</label>
                        <small>
                          <div id="errorExperience" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <select id="category" name="category">
                          <option value="" disabled selected>Select Category</option>
                          <% categories.forEach(c => { %>
                          <option value="<%= c._id %>"><%= c.name %></option>
                          <% }); %>
                        </select>
                        <label>Category</label>
                        <small>
                          <div id="errorCategories" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <select id="jobType" name="jobType">
                          <option value="Full time">Full-time</option>
                          <option value="Part time">Part-time</option>
                        </select>
                        <label>Job Type</label>
                        <small>
                          <div id="errorJobType" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <select id="workPlace" name="workPlace">
                          <option value="Work from office">Work from office</option>
                          <option value="Work from home">Work from home</option>
                        </select>
                        <label>Work Place</label>
                      </div>

                      <div class="input-field col m6 s12 mt-0">
                        <select id="popular" name="popular">
                          <option value="true">True</option>
                          <option value="false">False</option>
                        </select>
                        <label>Set as popular</label>
                      </div>

                      <div class="input-field col m4 s12 ">
                        <input placeholder="Country" id="country" name="country" type="text">
                        <label for="country">Country</label>
                        <small>
                          <div id="errorCountry" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m4 s12 ">
                        <input placeholder="State" id="state" name="state" type="text">
                        <label for="state">State</label>
                        <small>
                          <div id="errorState" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col m4 s12 ">
                        <input placeholder="City" id="city" name="city" type="text">
                        <label for="city">City</label>
                        <small>
                          <div id="errorCity" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col s12 mb-0 mt-0">
                        <textarea class="materialize-textarea" id="shortDesc" name="shortDesc" placeholder="Short Description"></textarea>
                        <label for="shortDesc">Short Description</label>
                        <small>
                          <div id="shortDescErr" class="error"></div>
                        </small>
                      </div>

                      <div class="input-field col s12 mt-0">
                        <small>Description</small>
                        <textarea name="skill" class="form-control ta" id="ta3"></textarea>
                      </div>

                      <div class="col s12">
                        <button type="submit" class="btn purple" id="submitBtn">Submit</button>
                        <a onclick="history.back()" class="btn btn-danger ml-1">Cancel</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="content-overlay"></div>
      </div>
    </div>
  </div>
  <!-- END: Page Main-->
  <script>
    const formC = document.getElementById('form');

    formC.addEventListener('submit', (e) => {
      e.preventDefault();
    })

    function validate() {
      let returnVal = true;

      const shortDescValue = document.getElementById('shortDesc').value.trim();
      const titleValue = document.getElementById('title').value.trim();
      const salaryValue = document.getElementById('salary').value.trim();
      const experienceValue = document.getElementById('experience').value.trim();
      const countryValue = document.getElementById('country').value.trim();
      const stateValue = document.getElementById('state').value.trim();
      const cityValue = document.getElementById('city').value.trim();
      const categoriesValue = document.getElementById('category').value.trim();
      const recruiterValue = document.getElementById('recruiter').value.trim();

      if (categoriesValue == '') {
        document.getElementById('errorCategories').innerText = 'Please select category.';
        returnVal = false;
      } else {
        document.getElementById('errorCategories').innerText = '';
      }

      if (recruiterValue == '') {
        document.getElementById('errorRecruiter').innerText = 'Please select recruiter name.';
        returnVal = false;
      } else {
        document.getElementById('errorRecruiter').innerText = '';
      }

      if (shortDescValue == '') {
        document.getElementById('shortDescErr').innerText = 'Please enter description.';
        returnVal = false;
      } else {
        document.getElementById('shortDescErr').innerText = '';
      }

      if (titleValue == '') {
        document.getElementById('errorTitle').innerText = 'Please enter title.';
        returnVal = false;
      } else {
        document.getElementById('errorTitle').innerText = '';
      }

      if (salaryValue === '') {
        document.getElementById('errorSalary').innerText = 'Please enter salary.';
        returnVal = false;
      } else if (isNaN(salaryValue)) {
        document.getElementById('errorSalary').innerText = 'Please enter a numeric value for salary.';
        returnVal = false;
      } else {
        document.getElementById('errorSalary').innerText = '';
      }

      if (experienceValue == '') {
        document.getElementById('errorExperience').innerText = 'Please enter experience.';
        returnVal = false;
      } else {
        document.getElementById('errorExperience').innerText = '';
      }

      if (stateValue == '') {
        document.getElementById('errorState').innerText = 'Please enter state name.';
        returnVal = false;
      } else {
        document.getElementById('errorState').innerText = '';
      }

      if (countryValue == '') {
        document.getElementById('errorCountry').innerText = 'Please enter country name.';
        returnVal = false;
      } else {
        document.getElementById('errorCountry').innerText = '';
      }

      if (cityValue == '') {
        document.getElementById('errorCity').innerText = 'Please enter city name.';
        returnVal = false;
      } else {
        document.getElementById('errorCity').innerText = '';
      }

      if (returnVal) {
        document.getElementById('submitBtn').disabled = true;
        formC.submit();
      }
    }
  </script>
  <%- include('_layouts/commonJs') %>
  <script src="/app-assets/vendors/select2/select2.full.min.js"></script>
  <script src="/app-assets/js/scripts/form-select2.js"></script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Dropify/0.2.2/js/dropify.min.js"></script>
  <script src="/app-assets/js/scripts/form-file-uploads.min.js"></script>
  <!-- ===== ckeditor JavaScript ===== -->
  <script src="//cdn.ckeditor.com/4.7.1/standard/ckeditor.js"></script>
  <script>
    $(function() {
      const elements = $('textarea.ta').get();
      Object.keys(elements).forEach(i => {
        CKEDITOR.replace(elements[i].id, {
          filebrowserUploadUrl: '/upload',
          format_tags: 'p;h1;h2;h3;h4;h5;h6'
        });
      });

      if ($("[data-fancybox]").length) {
        $("[data-fancybox]").fancybox();
      }
    });
  </script>
</body>

</html>